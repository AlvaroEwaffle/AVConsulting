---
interface Props {
    class?: string;
}

const targetAudience = [
    "Tienes una idea (o varias) y no sabes cuál elegir",
    "Quieres emprender, pero no sabes cómo empezar",
    "Ya empezaste algo, pero sientes que estás medio perdido",
    "Te gustaría aprender con alguien que ya pasó por eso y te muestre el camino con claridad"
] as const;

type TargetPoint = typeof targetAudience[number];
---

<section class="py-8 px-4 bg-white rounded-xl mt-8">
    <div>
        <h2 class="text-3xl font-bold text-[#2175a1] mb-8 text-center">
            🎯 Esta clase es para ti si:
        </h2>
        <div class="grid gap-3">
            {
                targetAudience.map((item: TargetPoint) => (
                    <div class="flex items-start">
                        <span class="text-[#3ca6dd] mt-1 mr-3 flex-shrink-0">→</span>
                        <p class="text-gray-700">{item}</p>
                    </div>
                ))
            }
        </div>
    </div>
</section> 