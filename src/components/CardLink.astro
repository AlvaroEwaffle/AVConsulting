---
interface Props {
  icon: string;
  title: string;
  desc: string;
  href: string;
}

const { icon, title, desc, href } = Astro.props;
---

<a
  href={href}
  class="flex items-center gap-4 border border-gray-200 rounded-2xl p-4 bg-white shadow-sm hover:shadow-lg hover:border-blue-200 transition-all duration-300 transform hover:-translate-y-1 active:scale-95 w-full min-h-[80px]"
  aria-label={`${title} - ${desc}`}
>
  <span class="text-2xl flex-shrink-0" aria-hidden="true">{icon}</span>
  <div class="min-w-0 flex-1">
    <h3 class="font-semibold text-gray-900 text-left text-lg">{title}</h3>
    <p class="text-sm text-gray-500 text-left mt-1">{desc}</p>
  </div>
  <svg class="w-5 h-5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
  </svg>
</a> 