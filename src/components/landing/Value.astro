---
interface ValuePoint {
    icon: string;
    title: string;
    description: string;
    value: number;
}

const valuePoints: ValuePoint[] = [
    {
        icon: "📊",
        title: "Modelo de Negocio Digital",
        description: "Desarrollo paso a paso de tu modelo de negocio digital, incluyendo validación de mercado, estructura de ingresos y estrategia de crecimiento. Incluye plantillas y herramientas exclusivas.",
        value: 300
    },
    {
        icon: "⚙️",
        title: "Estructuración de Operaciones",
        description: "Guía completa para estructurar tus operaciones digitales: procesos, herramientas, automatización y métricas clave. Todo lo necesario para escalar tu negocio de manera eficiente.",
        value: 250
    },
    {
        icon: "🎯",
        title: "Plan de Acción Personalizado",
        description: "Desarrollo de un plan de acción detallado y específico para tu negocio, con hitos claros y estrategias personalizadas. Incluye revisiones y ajustes semanales.",
        value: 300
    },
    {
        icon: "🤝",
        title: "Mentoría Personalizada",
        description: "Sesiones individuales de mentoría para resolver tus desafíos específicos. Acceso directo para consultas y feedback personalizado en cada etapa de tu proyecto.",
        value: 400
    },
    {
        icon: "📱",
        title: "Kit de Herramientas Digitales",
        description: "Acceso a herramientas premium para gestión de proyectos, marketing, análisis de datos y automatización. Incluye guías de implementación y casos de uso.",
        value: 200
    },
    {
        icon: "📈",
        title: "Estrategia de Marketing Digital",
        description: "Desarrollo de tu estrategia de marketing digital completa: desde branding hasta canales de adquisición y retención de clientes. Incluye plantillas y frameworks probados.",
        value: 350
    },
    {
        icon: "💰",
        title: "Estructura Financiera",
        description: "Guía para estructurar las finanzas de tu negocio digital: presupuesto, flujo de caja, métricas financieras y estrategias de monetización. Incluye plantillas y calculadoras.",
        value: 250
    },
    {
        icon: "👥",
        title: "Comunidad y Networking",
        description: "Acceso a una comunidad exclusiva de emprendedores digitales, eventos de networking y masterminds grupales. Oportunidades de colaboración y aprendizaje continuo.",
        value: 100
    }
];

const totalValue = valuePoints.reduce((sum, point) => sum + point.value, 0);
const investmentValue = 60; // Valor del programa
const savings = totalValue - investmentValue;
---

<section class="pt-0 pb-16 px-4 bg-gradient-to-r from-[#2175a1] to-[#3ca6dd] text-white">
    <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">
            💎 El Valor Real del Programa
        </h2>
        
        <div class="grid md:grid-cols-2 gap-8 mb-12">
            {valuePoints.map(point => (
                <div class="bg-white/10 backdrop-blur-sm p-6 rounded-xl">
                    <h3 class="text-xl font-bold mb-4 flex items-center justify-between">
                        <div class="flex items-center">
                            <span class="text-2xl mr-2">{point.icon}</span>
                            {point.title}
                        </div>
                        <span class="text-lg font-semibold">${point.value} USD</span>
                    </h3>
                    <p class="text-white/90">
                        {point.description}
                    </p>
                </div>
            ))}
        </div>

        <div class="text-center bg-white/10 backdrop-blur-sm p-8 rounded-xl">
            <p class="text-2xl font-bold mb-4">
                Valor Total: ${totalValue} USD
            </p>
            <div class="relative">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t-2 border-white/20"></div>
                </div>
                
            </div>
            <p class="mt-6 text-3xl text-white/90">
                Ahorras ${savings} USD en conocimiento y recursos valiosos
            </p>
            <a 
                href="https://pay.hotmart.com/L98924437P?bid=1744035789118" 
                target="_blank"
                rel="noopener noreferrer"
                class="mt-8 inline-block bg-white text-[#2175a1] hover:bg-[#2175a1] hover:text-white transition-all duration-300 px-8 py-4 rounded-lg font-bold text-lg shadow-lg hover:shadow-xl"
            >
                ¡Inscríbete Ahora por ${investmentValue} USD!
            </a>
        </div>
    </div>
</section> 