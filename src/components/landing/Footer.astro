---
import { Image } from 'astro:assets';
import icono from '../../assets/icono.png';

const currentYear = new Date().getFullYear();

const socialLinks = [
  { icon: "ri-linkedin-fill", href: "https://www.linkedin.com/in/alvarovillena/", label: "LinkedIn" },
  { icon: "ri-twitter-fill", href: "https://twitter.com/alvarovillena", label: "Twitter" },
];
---

<footer class="relative overflow-hidden bg-primary overflow-x-hidden w-full max-w-full">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Main Footer Content -->
    <div class="py-16 text-center">
      <!-- Logo -->
      <div class="mb-8 flex justify-center">
        <Image src={icono} alt="Álvaro Villena Logo" class="h-16 w-16" />
      </div>

      <!-- Persuasive Message -->
      <div class="max-w-3xl mx-auto mb-8">
        <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-4">
          Lanzar tu negocio digital es posible
        </h2>
        <p class="text-xl text-white/90">
          Shape Up te muestra el camino
        </p>
      </div>

      <!-- Social Links -->
      <div class="flex justify-center space-x-6 mb-8">
        {socialLinks.map(({ icon, href, label }) => (
          <a
            href={href}
            target="_blank"
            rel="noopener noreferrer"
            class="text-white/70 hover:text-white transition-colors"
            aria-label={label}
          >
            <i class={`${icon} text-2xl`}></i>
          </a>
        ))}
      </div>

      <!-- Final CTA -->
      <div class="mb-8">
        <a 
          href="#contacto" 
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-primary rounded-full font-semibold text-lg hover:bg-gray-100 transition-colors duration-300 shadow-lg hover:shadow-xl"
        >
          Agendar llamada gratuita
        </a>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-white/10 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-sm text-white/70">
          © {currentYear} Álvaro Villena. Todos los derechos reservados.
        </p>
        <div class="flex space-x-6 text-sm text-white/70">
          <a href="/privacidad" class="hover:text-white transition-colors">
            Política de Privacidad
          </a>
          <a href="/terminos" class="hover:text-white transition-colors">
            Términos y Condiciones
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
</style> 