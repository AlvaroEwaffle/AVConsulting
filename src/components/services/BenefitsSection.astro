---
interface Props {
  title: string;
  subtitle: string;
  benefits: Array<{
    icon: string;
    title: string;
    description: string;
  }>;
}

const { title, subtitle, benefits } = Astro.props;
---

<section class="py-20 bg-white relative overflow-hidden">
  <!-- Animated background dots -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 left-10 w-2 h-2 bg-primary/20 rounded-full animate-pulse"></div>
    <div class="absolute top-40 right-20 w-3 h-3 bg-secondary/30 rounded-full animate-ping"></div>
    <div class="absolute top-60 left-1/4 w-1 h-1 bg-primary/40 rounded-full animate-bounce"></div>
    <div class="absolute top-80 right-1/3 w-2 h-2 bg-secondary/25 rounded-full animate-pulse"></div>
    <div class="absolute top-32 right-1/2 w-1.5 h-1.5 bg-primary/35 rounded-full animate-ping"></div>
    <div class="absolute top-96 left-1/2 w-2.5 h-2.5 bg-secondary/20 rounded-full animate-bounce"></div>
  </div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-16">
      <h2 class="text-3xl lg:text-4xl font-bold text-text-dark mb-6">
        {title}
      </h2>
      <p class="text-xl text-text-light max-w-4xl mx-auto">
        {subtitle}
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {benefits.map((benefit, index) => (
        <div class="bg-gradient-to-br from-accent to-background rounded-2xl p-8 text-center border border-primary/20 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2 group">
          <!-- Animated icon container -->
          <div class="w-20 h-20 bg-primary rounded-full flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <span class="text-3xl">{benefit.icon}</span>
          </div>
          
          <h3 class="text-xl font-bold text-text-dark mb-4 group-hover:text-primary transition-colors duration-300">
            {benefit.title}
          </h3>
          <p class="text-text-light leading-relaxed group-hover:text-text-dark transition-colors duration-300">
            {benefit.description}
          </p>
          
          <!-- Animated underline -->
          <div class="w-0 h-0.5 bg-gradient-to-r from-primary to-secondary mx-auto mt-4 group-hover:w-full transition-all duration-500"></div>
        </div>
      ))}
    </div>
  </div>
</section> 