---
interface Props {
  title: string;
  subtitle: string;
  price: string;
  promise: string;
  buttonText: string;
  buttonHref: string;
  featured?: boolean;
  icon?: string;
}

const { title, subtitle, price, promise, buttonText, buttonHref, featured = false, icon = "ðŸš€" } = Astro.props;
---

<div class={`service-card group relative overflow-hidden rounded-2xl transition-all duration-300 transform hover:-translate-y-2 ${featured ? 'ring-4 ring-yellow-400 bg-gradient-to-br from-blue-600 to-blue-800 text-white' : 'bg-white border border-gray-200 text-gray-900 hover:shadow-xl hover:border-blue-300'}`}>
  <!-- Featured Badge -->
  {featured && (
    <div class="absolute top-4 right-4 bg-yellow-400 text-black px-3 py-1 rounded-full text-sm font-semibold">
      MÃ¡s Popular
    </div>
  )}
  
  <div class="p-6">
    <!-- Header -->
    <div class="flex items-start justify-between mb-4">
      <div class="flex items-center space-x-3">
        <span class="text-3xl">{icon}</span>
        <div>
          <h3 class={`text-xl font-bold ${featured ? 'text-white' : 'text-gray-900'}`}>
            {title}
          </h3>
          <p class={`text-sm ${featured ? 'text-blue-100' : 'text-gray-600'}`}>
            {subtitle}
          </p>
        </div>
      </div>
      
      <!-- Price -->
      <div class={`text-right ${featured ? 'text-white' : 'text-blue-600'}`}>
        <div class="text-2xl font-bold">{price}</div>
        {price.includes('/mes') && (
          <div class="text-sm opacity-80">por mes</div>
        )}
      </div>
    </div>
    
    <!-- Promise -->
    <p class={`text-sm leading-relaxed mb-6 ${featured ? 'text-blue-100' : 'text-gray-700'}`}>
      {promise}
    </p>
    
    <!-- Button -->
    <a 
      href={buttonHref}
      class={`block w-full text-center py-3 px-6 rounded-xl font-semibold transition-all duration-200 ${
        featured 
          ? 'bg-yellow-400 hover:bg-yellow-500 text-black transform hover:scale-105' 
          : 'bg-blue-600 hover:bg-blue-700 text-white hover:shadow-lg'
      }`}
    >
      {buttonText}
    </a>
    
    <!-- Hover Effect -->
    <div class={`absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent transform -skew-x-12 -translate-x-full transition-transform duration-700 group-hover:translate-x-full ${featured ? 'opacity-20' : 'opacity-5'}`}></div>
  </div>
</div>

<style>
  .service-card {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  }
  
  .service-card:hover {
    box-shadow: 0 20px 25px rgba(0, 0, 0, 0.1);
  }
  
  .featured .service-card {
    box-shadow: 0 20px 40px rgba(59, 130, 246, 0.3);
  }
</style> 