---
interface Props {
  title: string;
  subtitle: string;
  guaranteeText: string;
  guaranteeDetails: string[];
  ctaText: string;
  ctaHref: string;
}

const { title, subtitle, guaranteeText, guaranteeDetails, ctaText, ctaHref } = Astro.props;
---

<section class="py-20 bg-gradient-to-br from-green-600 to-green-700 relative overflow-hidden">
  <!-- Animated background dots -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-10 left-20 w-2 h-2 bg-white/20 rounded-full animate-pulse"></div>
    <div class="absolute top-32 right-16 w-3 h-3 bg-white/30 rounded-full animate-ping"></div>
    <div class="absolute top-64 left-1/3 w-1 h-1 bg-white/40 rounded-full animate-bounce"></div>
    <div class="absolute top-80 right-1/4 w-2 h-2 bg-white/25 rounded-full animate-pulse"></div>
    <div class="absolute top-40 right-1/2 w-1.5 h-1.5 bg-white/35 rounded-full animate-ping"></div>
    <div class="absolute top-96 left-1/2 w-2.5 h-2.5 bg-white/20 rounded-full animate-bounce"></div>
  </div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-16">
      <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">
        {title}
      </h2>
      <p class="text-xl text-white/90 max-w-3xl mx-auto">
        {subtitle}
      </p>
    </div>
    
    <!-- Main Guarantee Card -->
    <div class="bg-white/10 backdrop-blur-sm rounded-3xl p-12 border-4 border-white/30 relative overflow-hidden group hover:bg-white/15 transition-all duration-500">
      <!-- Animated corner elements -->
      <div class="absolute top-0 right-0 w-0 h-0 border-l-[40px] border-l-transparent border-t-[40px] border-t-white/20 group-hover:border-t-white/40 transition-all duration-500"></div>
      <div class="absolute bottom-0 left-0 w-0 h-0 border-r-[40px] border-r-transparent border-b-[40px] border-b-white/20 group-hover:border-b-white/40 transition-all duration-500"></div>
      
      <!-- Guarantee Badge -->
      <div class="inline-flex items-center px-6 py-3 bg-green-500 text-white rounded-full text-lg font-bold mb-8 animate-pulse">
        <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        GARANTÍA 100%
      </div>
      
      <!-- Main Guarantee Text -->
      <div class="text-center mb-12">
        <h3 class="text-4xl lg:text-5xl font-bold text-white mb-6 leading-tight">
          {guaranteeText}
        </h3>
        <div class="w-24 h-1 bg-yellow-400 mx-auto rounded-full"></div>
      </div>
      
      <!-- Guarantee Details -->
      <div class="grid md:grid-cols-2 gap-8 mb-12">
        {guaranteeDetails.map((detail, index) => (
          <div class="flex items-start space-x-4 group/detail">
            <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0 group-hover/detail:scale-110 transition-transform duration-300">
              <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <p class="text-white/90 text-lg leading-relaxed group-hover/detail:text-white transition-colors duration-300">
              {detail}
            </p>
          </div>
        ))}
      </div>
      
      <!-- Trust Indicators -->
      <div class="text-center space-y-4 mb-8">
        <div class="inline-flex items-center px-6 py-3 bg-white/20 text-white rounded-full text-sm font-semibold border border-white/30">
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          Sin preguntas • Sin complicaciones • 100% Transparente
        </div>
      </div>
      
      <!-- CTA -->
      <div class="text-center">
        <a
          href={ctaHref}
          class="inline-block bg-yellow-400 hover:bg-yellow-500 text-black px-10 py-5 rounded-xl font-bold text-2xl transition-all duration-200 transform hover:scale-105 hover:shadow-2xl shadow-lg"
        >
          {ctaText}
        </a>
        <p class="text-white/80 text-sm mt-4">
          Tu inversión está 100% protegida • Sin riesgos • Sin compromisos
        </p>
      </div>
      
      <!-- Floating dots around the card -->
      <div class="absolute -top-2 -left-2 w-1 h-1 bg-white/40 rounded-full animate-ping"></div>
      <div class="absolute -bottom-2 -right-2 w-1.5 h-1.5 bg-white/30 rounded-full animate-pulse"></div>
      <div class="absolute top-1/2 -right-2 w-1 h-1 bg-white/50 rounded-full animate-bounce"></div>
    </div>
  </div>
</section> 