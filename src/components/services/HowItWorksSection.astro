---
interface Props {
  title: string;
  subtitle: string;
  steps: Array<{
    number: number;
    title: string;
    description: string;
    icon: string;
  }>;
  ctaText: string;
  ctaHref: string;
}

const { title, subtitle, steps, ctaText, ctaHref } = Astro.props;
---

<section class="py-20 bg-gradient-to-br from-primary to-secondary relative overflow-hidden">
  <!-- Animated background dots -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-10 left-20 w-2 h-2 bg-white/20 rounded-full animate-pulse"></div>
    <div class="absolute top-32 right-16 w-3 h-3 bg-white/30 rounded-full animate-ping"></div>
    <div class="absolute top-64 left-1/3 w-1 h-1 bg-white/40 rounded-full animate-bounce"></div>
    <div class="absolute top-80 right-1/4 w-2 h-2 bg-white/25 rounded-full animate-pulse"></div>
    <div class="absolute top-40 right-1/2 w-1.5 h-1.5 bg-white/35 rounded-full animate-ping"></div>
    <div class="absolute top-96 left-1/2 w-2.5 h-2.5 bg-white/20 rounded-full animate-bounce"></div>
  </div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-16">
      <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">
        {title}
      </h2>
      <p class="text-xl text-white/90 max-w-3xl mx-auto">
        {subtitle}
      </p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8 mb-16">
      {steps.map((step, index) => (
        <div class="relative text-center group">
          <!-- Step number -->
          <div class="w-20 h-20 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-6 border-4 border-white/30 group-hover:scale-110 group-hover:border-white/50 transition-all duration-300">
            <span class="text-3xl font-bold text-white">{step.number}</span>
          </div>
          
          <!-- Step content -->
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20 group-hover:bg-white/15 group-hover:border-white/30 transition-all duration-300">
            <div class="text-4xl mb-4 group-hover:scale-110 transition-transform duration-300">{step.icon}</div>
            <h3 class="text-xl font-bold text-white mb-4 group-hover:text-accent transition-colors duration-300">
              {step.title}
            </h3>
            <p class="text-white/90 leading-relaxed group-hover:text-white transition-colors duration-300">
              {step.description}
            </p>
          </div>
          
          <!-- Floating dots around each step -->
          <div class="absolute -top-2 -left-2 w-1 h-1 bg-white/40 rounded-full animate-ping"></div>
          <div class="absolute -bottom-2 -right-2 w-1.5 h-1.5 bg-white/30 rounded-full animate-pulse"></div>
        </div>
      ))}
    </div>
    
    <!-- CTA Secundario -->
    <div class="text-center">
      <a 
        href={ctaHref}
        class="inline-block bg-yellow-400 hover:bg-yellow-500 text-black px-8 py-4 rounded-xl font-bold text-xl transition-all duration-200 transform hover:scale-105 hover:shadow-2xl shadow-lg"
      >
        {ctaText}
      </a>
      <p class="text-white/80 text-sm mt-4">
        Sin compromisos • Cancela cuando quieras • Sin tarjeta de crédito
      </p>
    </div>
  </div>
</section> 