---
interface Props {
  title: string;
  subtitle: string;
  ctaText: string;
  ctaHref: string;
  urgency?: string;
  socialProof?: string;
}

const { title, subtitle, ctaText, ctaHref, urgency, socialProof } = Astro.props;
---

<section class="py-20 bg-gradient-to-br from-primary to-secondary relative overflow-hidden">
  <!-- Animated background dots -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-10 left-20 w-2 h-2 bg-white/20 rounded-full animate-pulse"></div>
    <div class="absolute top-32 right-16 w-3 h-3 bg-white/30 rounded-full animate-ping"></div>
    <div class="absolute top-64 left-1/3 w-1 h-1 bg-white/40 rounded-full animate-bounce"></div>
    <div class="absolute top-80 right-1/4 w-2 h-2 bg-white/25 rounded-full animate-pulse"></div>
    <div class="absolute top-40 right-1/2 w-1.5 h-1.5 bg-white/35 rounded-full animate-ping"></div>
    <div class="absolute top-96 left-1/2 w-2.5 h-2.5 bg-white/20 rounded-full animate-bounce"></div>
  </div>
  
  <!-- Background pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 25% 25%, white 2px, transparent 2px); background-size: 50px 50px;"></div>
  </div>
  
  <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <!-- Urgency indicator -->
    {urgency && (
      <div class="inline-flex items-center px-6 py-3 bg-red-500 text-white rounded-full text-lg font-bold mb-8 animate-pulse">
        <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
        </svg>
        {urgency}
      </div>
    )}
    
    <!-- Main content -->
    <h2 class="text-3xl lg:text-5xl font-bold text-white mb-6">
      {title}
    </h2>
    
    <p class="text-xl lg:text-2xl text-white/90 mb-12 max-w-3xl mx-auto leading-relaxed">
      {subtitle}
    </p>
    
    <!-- CTA Button -->
    <div class="mb-8">
      <a 
        href={ctaHref}
        class="inline-block bg-yellow-400 hover:bg-yellow-500 text-black px-12 py-6 rounded-2xl font-bold text-2xl transition-all duration-200 transform hover:scale-105 hover:shadow-2xl shadow-lg"
      >
        {ctaText}
      </a>
    </div>
    
    <!-- Social proof -->
    {socialProof && (
      <div class="text-center">
        <p class="text-white/80 text-lg mb-4">
          {socialProof}
        </p>
      </div>
    )}
    
    <!-- Trust indicators -->
    <div class="flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-8 mt-8 text-white/80">
      <div class="flex items-center group hover:text-white transition-colors duration-300">
        <svg class="w-5 h-5 mr-2 group-hover:scale-110 transition-transform duration-200" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        <span>Garant√≠a de resultados</span>
      </div>
      <div class="flex items-center group hover:text-white transition-colors duration-300">
        <svg class="w-5 h-5 mr-2 group-hover:scale-110 transition-transform duration-200" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        <span>Sin compromisos</span>
      </div>
      <div class="flex items-center group hover:text-white transition-colors duration-300">
        <svg class="w-5 h-5 mr-2 group-hover:scale-110 transition-transform duration-200" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        <span>Soporte incluido</span>
      </div>
    </div>
    
    <!-- Floating accent dots -->
    <div class="absolute top-1/4 left-10 w-1 h-1 bg-white/40 rounded-full animate-ping"></div>
    <div class="absolute bottom-1/4 right-10 w-1.5 h-1.5 bg-white/30 rounded-full animate-pulse"></div>
    <div class="absolute top-1/2 right-1/4 w-1 h-1 bg-white/50 rounded-full animate-bounce"></div>
  </div>
</section> 