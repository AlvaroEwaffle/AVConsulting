---
import { Image } from 'astro:assets';
import icono from '../assets/icono.png';

const navItems = [
  { href: '/', text: 'Inicio' },
  { href: '#que-hago', text: '¿Qué hago?' },
  { href: '#mi-historia', text: 'Mi historia' },
  { href: '#servicios', text: 'Servicios' },
  { href: '#mi-metodo', text: 'Mi método' },
  { href: '#quien-soy', text: '¿Quién soy?' },
  { href: '#mis-negocios', text: 'Mis negocios' },
];
---

<header class="fixed w-full bg-blue-600 text-white z-50 border-b border-gray-100 shadow-lg" style="background-color: #2175a1;">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <Image src={icono} alt="Álvaro Villena" class="h-8 w-auto" />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="text-white hover:text-blue-200 transition-colors"
          >
            {item.text}
          </a>
        ))}
        <a
          href="https://www.fidelidapp.cl/agendalanding/678e4df080622b7c255a9220"
          class="px-4 py-2 bg-white text-blue-600 rounded-full hover:bg-blue-50 transition-colors font-medium"
        >
          Agendar llamada
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        class="md:hidden p-2 text-white"
        id="mobile-menu-button"
        aria-label="Toggle menu"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div
      class="hidden md:hidden"
      id="mobile-menu"
    >
      <div class="px-2 pt-2 pb-3 space-y-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="block px-3 py-2 text-white hover:text-blue-200 transition-colors"
          >
            {item.text}
          </a>
        ))}
        <a
          href="https://www.fidelidapp.cl/agendalanding/678e4df080622b7c255a9220"
          class="block px-3 py-2 bg-white text-blue-600 rounded-lg text-center font-medium hover:bg-blue-50 transition-colors"
        >
          Agendar llamada
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Smooth scrolling for navigation links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', (e: Event) => {
      e.preventDefault();
      const href = (anchor as HTMLAnchorElement).getAttribute('href');
      if (href) {
        const target = document.querySelector(href) as HTMLElement;
        if (target) {
          // Close mobile menu if open
          mobileMenu?.classList.add('hidden');
          
          // Calculate offset for fixed header
          const header = document.querySelector('header') as HTMLElement;
          const headerHeight = header?.offsetHeight || 0;
          const targetPosition = target.offsetTop - headerHeight - 20; // 20px extra padding
          
          window.scrollTo({
            top: targetPosition,
            behavior: 'smooth'
          });
        }
      }
    });
  });
</script> 