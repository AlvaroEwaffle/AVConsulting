---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import MatrixBackground from '../components/common/MatrixBackground.astro';

interface Props {
  title: string;
  description: string;
  serviceName: string;
  servicePrice: string;
}

const { title, description, serviceName, servicePrice } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <MatrixBackground />
  <Header />
  
  <main class="pt-16">
    <slot />
  </main>
  
  <Footer />
</BaseLayout> 