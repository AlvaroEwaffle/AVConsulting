---
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
---

<h1>Blog</h1>

<ul>
  {posts.map(post => (
    <li>
      <a href={`/blog/${post.slug}`}>
        <h2>{post.data.title}</h2>
        <p>{post.data.description}</p>
        <small>{new Date(post.data.date).toLocaleDateString()}</small>
      </a>
    </li>
  ))}
</ul>
