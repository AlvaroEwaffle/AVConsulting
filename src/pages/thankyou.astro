---
import type { GetStaticPaths } from 'astro';
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';

const pageTitle = "¡Gracias por tu registro! 🎉";
const pageDescription = "Tu registro ha sido confirmado. Te redirigiremos al sitio principal en unos segundos.";
---

<Layout title="¡Gracias por tu registro! - Álvaro Villena" description="Tu registro ha sido confirmado. Pronto recibirás más información en tu correo electrónico.">
    <main class="w-full min-h-screen bg-[#f5f5f5] overflow-x-hidden">
        <section class="thankyou-container">
            <div class="thankyou-card">
                <h1>¡Registro Exitoso! 🎉</h1>
                <p class="mb-4">Hemos guardado tu cupo para la clase gratuita.</p>
                <p class="mb-4">Revisa tu correo electrónico para más detalles sobre la clase.</p>
                <p class="text-sm text-gray-600">Te redirigiremos al sitio principal en unos segundos...</p>
            </div>
        </section>
    </main>
</Layout>

<script>
    // Google Analytics Event
    declare global {
        interface Window {
            gtag: (...args: any[]) => void;
            dataLayer: any[];
        }
    }

    window.dataLayer = window.dataLayer || [];
    function gtag(...args: any[]) {
        window.dataLayer.push(args);
    }
    gtag('js', new Date());
    gtag('config', 'G-N65SYS2FHY');

    // Form Conversion Event
    gtag('event', 'conversion', {
        'send_to': 'AW-11453117574/8nPbCPHB0ZMZEP2Oj7Yq',
        'event_category': 'Formulario',
        'event_label': 'Registro Clase Gratuita'
    });

    // Redirect after 5 seconds
    setTimeout(() => {
        window.location.href = "/";
    }, 5000);
</script>

<style>
    .thankyou-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 1rem;
    }

    .thankyou-card {
        text-align: center;
        background: white;
        padding: 3rem;
        border-radius: 1rem;
        box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
        max-width: 32rem;
        width: 100%;
    }

    h1 {
        color: #2175a1;
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
    }

    p {
        font-size: 1.125rem;
        color: #4a5568;
        line-height: 1.6;
    }
</style>
